<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="#FFCD4AE4"
        android:orientation="horizontal"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:layout_collapseParallaxMultiplier="0.7">

        <RadioButton
            android:id="@+id/radioButton_xiangce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="相册"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/top_navigation_textcolor"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_jiange_vertical_1"/>
        <RadioButton
            android:id="@+id/radioButton_sisi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="思思"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/top_navigation_textcolor"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_jiange_vertical_1"/>
        <RadioButton
            android:id="@+id/radioButton_lianxiwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="\@我"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/top_navigation_textcolor"/>
    </RadioGroup>

