<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF8E23C2">

    <WebView
        android:id="@+id/fujin_leida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="#FF8E23C2"
        android:foregroundGravity="center" />

    <LinearLayout
        android:id="@+id/leida_linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leida_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="千寻"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/leida_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离你54米"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ImageView
            android:id="@+id/leida_imageView1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/xiyou1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leida_linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leida_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jones"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/leida_textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离你106米"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ImageView
            android:id="@+id/leida_imageView2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/xiyou2" />
    </LinearLayout>


</RelativeLayout>