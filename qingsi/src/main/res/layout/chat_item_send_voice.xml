<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_time_send_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="bottom"
        android:text="时间"
        android:textSize="12sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_time_send"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/imageView_chat_send_voice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView_voice_send"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/imageView_chat_send"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/imageView_chat_send_voice"
            android:background="#EE7AE9"
            android:gravity="center"
            android:src="@drawable/bottom_chat_voice" />

        <TextView
            android:id="@+id/textView_chat_send_voice_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageView_voice_send"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:text="时长" />
    </RelativeLayout>
</LinearLayout>