<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF560890"
    tools:context="com.qingsi.qingsi.base.LoginActivity">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textfield_activated_holo_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#ffffffff"
            android:text="账号：" />

        <EditText
            android:id="@+id/editText_userName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_height="60dp"
            android:textSize="22sp"
            android:background="#00ffffff"
            android:textColorHint="#ffffffff"
            android:hint="         请输入用户账号" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textfield_activated_holo_light"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#ffffffff"
            android:text="密码：" />

        <EditText
            android:id="@+id/editText_passWord"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:background="#00ffffff"
            android:textSize="22sp"
            android:hint="    输入用户密码"
            android:textColorHint="#ffffffff"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_login"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#FFFF00FE"
            android:onClick="login"
            android:text="登录"
            android:textColor="#ffffffff"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/button_signin"
            android:background="@drawable/zhuce_button_bg"
            android:layout_marginLeft="50dp"
            android:layout_alignBottom="@+id/button_login"
            android:layout_alignParentLeft="true"
            android:onClick="signin"
            android:textColor="#ffffffff"
            android:text="注册"/>

    </RelativeLayout>



</LinearLayout>
