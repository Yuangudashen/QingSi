<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qingsi.qingsi.siyu.ChatRecordActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/button_chat_recorde_delect"
            android:layout_width="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:text="删除"/>
        <Button
            android:id="@+id/button_chat_recorde_out"
            android:layout_width="80dp"
            android:layout_toLeftOf="@+id/button_chat_recorde_delect"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:text="导出"/>

    </RelativeLayout>

</LinearLayout>
